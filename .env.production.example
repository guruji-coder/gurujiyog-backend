# Production Environment Variables
# Copy this to .env.production and update with your actual values

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gurujiyog-prod

# Atlas API Keys for automated IP management
ATLAS_PUBLIC_KEY=your-atlas-public-key-here
ATLAS_PRIVATE_KEY=your-atlas-private-key-here
ATLAS_GROUP_ID=your-atlas-project-id-here

# Environment
NODE_ENV=production

# Security
JWT_SECRET=your-super-secure-jwt-secret-256-bits-long
SESSION_SECRET=your-super-secure-session-secret

# API Configuration
PORT=4001
BACKEND_HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com

# Email Service
RESEND_API_KEY=your-resend-api-key

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# User Role Configuration
DEFAULT_USER_ROLE=student
ROLE_PERMISSIONS_CACHE_TTL=3600
SHAALA_OWNER_APPROVAL_REQUIRED=true

# Session Configuration for Hybrid Approach
SESSION_CACHE_TTL=1800
USER_DATA_CACHE_TTL=900
REFRESH_TOKEN_TTL=86400

# Data Loading Strategy
CRITICAL_DATA_TIMEOUT=5000
NON_CRITICAL_DATA_TIMEOUT=15000
BACKGROUND_FETCH_DELAY=2000
RECENT_BOOKINGS_LIMIT=5

# Schema Optimization
USER_PROFILE_INDEX_TTL=7200
BOOKING_SUMMARY_CACHE_TTL=1800
ACTIVE_SUBSCRIPTION_CACHE_TTL=3600

# Rate Limiting for Auth Endpoints
AUTH_RATE_LIMIT_WINDOW=900
AUTH_RATE_LIMIT_MAX=10

# Monitoring
MESSAGE_CENTRAL_CUSTOMER_ID=your-message-central-id
