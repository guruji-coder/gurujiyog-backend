{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs", 
    "lib": ["ES2022"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["tests/**/*"],
  "exclude": ["node_modules", "dist", "src/types/fastify.d.ts"]
}
